<?xml version="1.0" encoding="utf-8"?>
<com.mods.grx.settings.fab.ObservableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/observableview">
    <LinearLayout android:layout_width="match_parent"  android:layout_height="wrap_content" android:orientation="vertical">
        <TextView android:layout_marginTop="10dp" android:layout_marginBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Credits" android:textSize="16dp" android:gravity="center" android:textColor="?complemnt_accent_color"/>
        <TextView android:layout_marginTop="10dp" android:layout_marginBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="This app uses the following libraries" android:textSize="14dp" android:gravity="center" />
        <com.mods.grx.settings.views.CardViewWithLink grxURL="https://github.com/makovkastar/FloatingActionButton"  android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="10dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:padding="15dp"  app:cardCornerRadius="8dp"
            app:cardBackgroundColor="?main_bg_color" app:cardElevation="8dp" app:cardPreventCornerOverlap="false" android:clickable="true" android:foreground="?android:attr/selectableItemBackground">
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingTop="10dp" android:paddingBottom="10dp">
                <ImageView android:layout_width="36dp" android:layout_height="36dp" android:layout_marginStart="8dp" android:layout_gravity="center_vertical"  android:src="@drawable/demo_github_logo"/>
                <TextView android:layout_width="wrap_content"  android:layout_height="match_parent"  android:gravity="center_vertical" android:layout_marginLeft="15dp"
                   android:text="Floating Action Button, by makovkastar"/>
            </LinearLayout>
        </com.mods.grx.settings.views.CardViewWithLink>

        <com.mods.grx.settings.views.CardViewWithLink grxURL="https://github.com/vikramkakkar/SublimeNavigationView"  android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="10dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:padding="15dp"  app:cardCornerRadius="8dp"
            app:cardBackgroundColor="?main_bg_color" app:cardElevation="8dp" app:cardPreventCornerOverlap="true" android:clickable="true" android:foreground="?android:attr/selectableItemBackground">
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingTop="10dp" android:paddingBottom="10dp">
                <ImageView android:layout_width="36dp" android:layout_height="36dp" android:layout_marginStart="8dp" android:layout_gravity="center_vertical"  android:src="@drawable/demo_github_logo"/>
                <TextView android:layout_width="wrap_content"  android:layout_height="match_parent"  android:gravity="center_vertical" android:layout_marginLeft="15dp"
                    android:text="SublimeNavigationView, by vikramkakkar"/>
            </LinearLayout>
        </com.mods.grx.settings.views.CardViewWithLink>

        <com.mods.grx.settings.views.CardViewWithLink grxURL="https://github.com/QuadFlask/colorpicker"  android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="10dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:padding="15dp"  app:cardCornerRadius="8dp"
            app:cardBackgroundColor="?main_bg_color" app:cardElevation="8dp" app:cardPreventCornerOverlap="true" android:clickable="true" android:foreground="?android:attr/selectableItemBackground">
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingTop="10dp" android:paddingBottom="10dp">
                <ImageView android:layout_width="36dp" android:layout_height="36dp" android:layout_marginStart="8dp" android:layout_gravity="center_vertical"  android:src="@drawable/demo_github_logo"/>
                <TextView android:layout_width="wrap_content"  android:layout_height="match_parent"  android:gravity="center_vertical" android:layout_marginLeft="15dp"
                    android:text="QuadFlask ColorPicker, by QuadFlask"/>
            </LinearLayout>
        </com.mods.grx.settings.views.CardViewWithLink>

        <TextView android:layout_marginTop="10dp" android:layout_marginBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Thanks" android:textSize="16dp" android:gravity="center" android:textColor="?complemnt_accent_color"/>

        <android.support.v7.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:padding="15dp"
            android:layout_gravity="center" app:cardBackgroundColor="?complemnt_accent_color" android:foregroundGravity="center" app:cardCornerRadius="8dp" app:cardElevation="8dp"
            app:cardPreventCornerOverlap="true" android:layout_marginStart="12dp" android:layout_marginEnd="12dp">
                <com.mods.grx.settings.views.TextViewWithLink android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content"
                    grxAnimateText="true" android:text="Many, many thanks to my cyber friends of the forum Esp-desarrolladores.com, a very special forum with people who always share their knowledge without asking anything in return
                    josete_1976, GVM, Morogoku, Neovendetta, Peugeot73, fivanbe, josechufa, NecrosauroN, javilonas, Trillo, Dav88, jiterron, and many more...No matter the order in which they appear in this text, the important thing is the good times we have been sharing these years. "
                    android:textSize="16dp" android:gravity="center"  android:textColor="?contrast_text_color"/>
        </android.support.v7.widget.CardView>

        <TextView android:layout_marginTop="10dp" android:layout_marginBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Thank you so much for all your help these years guys!" android:textSize="14dp" android:gravity="center" android:textColor="?complemnt_accent_color"/>



    </LinearLayout>
</com.mods.grx.settings.fab.ObservableScrollView>