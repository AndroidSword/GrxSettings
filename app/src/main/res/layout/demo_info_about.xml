<?xml version="1.0" encoding="utf-8"?>
<com.mods.grx.settings.fab.ObservableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:include="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:id="@+id/observableview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <ImageView android:layout_width="150dip" android:layout_gravity="center_horizontal" android:gravity="center_horizontal" android:layout_marginTop="200dp" android:layout_height="150dp" android:alpha="0.2" android:src="@mipmap/ic_launcher" />
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">

                <android.support.v7.widget.CardView  android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp" android:layout_marginRight="30dp" app:cardBackgroundColor="?colorAccent"
                    app:cardCornerRadius="3dp" app:cardElevation="3dp" app:cardPreventCornerOverlap="false">

                        <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingTop="15dp" android:paddingBottom="15dp"  android:layout_gravity="center" android:gravity="center"
                            android:textColor="?contrast_text_color" android:textSize="18sp" android:text="GrxSettings v1.0"/>

                </android.support.v7.widget.CardView>

                <TextView android:layout_marginTop="8dp"  android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:text="GrxSettings v1.0 (20/03/2017)" android:textSize="18dp" android:textColor="?colorAccent" android:gravity="center" android:textStyle="bold"/>
                <ImageView android:layout_width="54dp" android:layout_height="54dp" android:layout_gravity="center" android:layout_marginTop="8dp" android:layout_marginBottom="4dp"
                    android:src="@drawable/demo_grouxho"/>
                <TextView android:layout_marginTop="4dp" android:layout_marginBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:text="by Grouxho" android:textSize="14dp" android:gravity="center" android:textColor="?complemnt_accent_color"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginBottom="4dp"
                    android:text="An app for configuring user preferences  - LP 5.1+" android:textSize="14dp"  android:textStyle="bold" android:layout_gravity="center_horizontal"/>
                <TextView android:layout_marginStart="15dp" android:layout_marginEnd="15dp" android:textAlignment="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:layout_marginBottom="4dp"  android:layout_gravity="center_horizontal"
                    android:text="After some years developing smali mods, I have decided to develop an application that meets all the requirements I have needed during this time. There are different ways of developing and implementing mods.
I hope this app helps you with your mods!. It should be compatible with any device running LP 5.1 +, although some designs may need to be adapted to a particular device"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="4dp"
                    android:text="More info" android:textSize="14dp"  android:textStyle="bold" android:layout_gravity="center_horizontal"/>
                <com.mods.grx.settings.views.LinearLayoutWithLink grxURL="http://www.github.com" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
                    android:background="?selectableItemBackground" android:orientation="horizontal">
                    <ImageView android:layout_width="36dp" android:layout_height="36dp" android:layout_gravity="center_vertical"  android:src="@drawable/demo_github_logo"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="match_parent" android:gravity="center_vertical" android:layout_marginLeft="15dp"
                        android:text="Source Code in GitHub"/>
                </com.mods.grx.settings.views.LinearLayoutWithLink>
                <com.mods.grx.settings.views.LinearLayoutWithLink grxURL="http://www.telegram.org" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
                    android:background="?selectableItemBackground" android:orientation="horizontal">
                    <ImageView android:layout_width="36dp" android:layout_height="36dp" android:layout_gravity="center_vertical"  android:src="@drawable/demo_telegram"/>
                    <TextView android:layout_width="wrap_content"  android:layout_height="match_parent"  android:gravity="center_vertical" android:layout_marginLeft="15dp"
                        android:text="Telegram Group"/>
                </com.mods.grx.settings.views.LinearLayoutWithLink>
                <com.mods.grx.settings.views.LinearLayoutWithLink grxURL="http://www.esp-desarrolladores.com" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
                    android:background="?selectableItemBackground" android:orientation="horizontal">
                    <com.mods.grx.settings.views.ImageViewWithLink android:layout_width="36dp" android:layout_height="36dp" android:layout_gravity="center_vertical" grxCircular="true" android:src="@drawable/demo_esp"/>
                    <TextView android:layout_width="wrap_content"  android:layout_height="match_parent"  android:gravity="center_vertical" android:layout_marginLeft="15dp"
                        android:text="Esp-Desarrolladores.com"/>
                </com.mods.grx.settings.views.LinearLayoutWithLink>
                <com.mods.grx.settings.views.LinearLayoutWithLink grxURL="http://www.xda-developers.com" android:paddingTop="12dp" android:paddingBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
                    android:background="?selectableItemBackground" android:orientation="horizontal">
                    <ImageView android:layout_width="36dp" android:layout_height="36dp" android:layout_gravity="center_vertical"  android:src="@drawable/demo_xda"/>
                    <TextView android:layout_width="wrap_content"  android:layout_height="match_parent"  android:gravity="center_vertical" android:layout_marginLeft="15dp"
                        android:text="xda-developers"/>
                </com.mods.grx.settings.views.LinearLayoutWithLink>

                <TextView android:layout_marginTop="4dp" android:layout_marginBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:text="License" android:textSize="18dp" android:textStyle="bold" android:gravity="center" android:textColor="?complemnt_accent_color"/>


                <com.mods.grx.settings.views.LinearLayoutWithLink grxURL="http://www.apache.org/licenses/LICENSE-2.0" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="?selectableItemBackground">
                        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"  android:padding="12dp"
                            android:text="The source code of this application is Licensed under the Apache License, Version 2.0 (the -License-).\n\r\n\rYou may not use this file except in compliance with the License. You may obtain a copy of the License at\n\r\n\rhttp://www.apache.org/licenses/LICENSE-2.0 \n\r\r\nUnless required by applicable law or agreed to in writing, software distributed under the License is distributed on an -AS IS- BASIS, WITHOUT WARRANTIES OR CONDITIONS OF ANY KIND, either express or implied.\n\r\n\rSee the License for the specific language governing permissions and limitations under the License (click here to see the license)."/>
                </com.mods.grx.settings.views.LinearLayoutWithLink>

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</com.mods.grx.settings.fab.ObservableScrollView>