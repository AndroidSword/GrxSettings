<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_item_edit"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">



    <ImageView
        android:id="@+id/img_item_edit"
        android:layout_gravity="center"
        android:layout_width="@dimen/dialog_aux_buttons_size"
        android:layout_height="@dimen/dialog_aux_buttons_size"/>

    <RelativeLayout
        android:id="@+id/aux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dip"
        android:layout_marginBottom="6dip"
        android:layout_weight="1.0"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="6.0dip">




            <TextView
                android:id="@+id/txt_item_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textStyle="bold"
                android:singleLine="true"

                android:textAppearance="?android:attr/textAppearanceSmall"/>

            <TextView
                android:id="@+id/nombre_paquete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:alpha="0.85"
                android:layout_below="@+id/txt_item_edit"
                android:textAppearance="?android:attr/textAppearanceSmall"
                />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/grx_id_contenedor_icono_item"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="5dp"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/color_app"
            android:layout_width="@dimen/dialog_aux_buttons_size"
            android:layout_height="@dimen/dialog_aux_buttons_size"
            android:scaleType="center"
            android:layout_toRightOf="@+id/aux"
            android:layout_alignParentRight="true"
            />

    </LinearLayout>





</LinearLayout>